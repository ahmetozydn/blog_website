<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="your-csrf-token-here">
  <title>Blog Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<style>

.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
  text-align: center;
}

.blog-snippet {
  font-style: italic;
  color: #777;
}

.blog-content {
  margin-top: 20px;
  border: 1px solid #ddd;
  padding: 10px;
}

.buttons {
  margin-top: 20px;
}
</style>
</head>
<body>
    <p id = "post-id" style="display: none;"><%=post._id%></p>
    <input type="hidden" name="_csrf" value="<%=token%>">
    <p id = "csrfToken" style="display: none;"><%=token%></p>
    <% if(isAuth){ %>
  <div class="container">
    <h1><%= post.title%></h1>
    <p class="blog-snippet"><%= post.snippet%></p>
    <div class="blog-content">
      <p><%= post.body%></p>
    </div>
</br>
        <div class="d-flex justify-content-between mt-3">
          <button class="btn btn-primary" id="update-button">Update</button>
          <button class="btn btn-danger" id="delete-button">Delete</button>
        </div>
  </div>
  <% }else{ %>
        <h2>You need to login to view your posts...</h2>
    <% } %>
<%- include("./partials/footer.ejs") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
<script>
  const deleteButton = document.getElementById("delete-button");



  $(document).ready(function() {
    var token1 = document.querySelector('input[name="_csrf"]').value;


    $('#delete-button').click( ()=>{
      const token = $('#csrfToken').text();
      console.log("the token is "+token);
       let id =  $('#post-id').text();
       let obj = {id: id}
        url = "/blogs/delete-post";
        fetch(url, {
          method: "post",
           headers:{
            'Content-Type': 'application/json',
            "X-CSRF-Token" : token1
          }, 
          body: JSON.stringify(obj)
        })
        .then(response => response.json()) // Parses response body as JSON
       // window.location.href = response.headers.get('Location'); // Redirect to the URL provided by the server
        .then(data => {
          console.log(data);
        if (data.redirect) {
            window.location.href = data.redirect;
        } 
        })
            .catch(error => console.error('Error:', error));
    })
    $('#update-button').click( ()=>{
        console.log("update button")
    })
});
</script>
</html>